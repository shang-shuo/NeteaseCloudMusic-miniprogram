/* pages/video/index.wxss */
.container{
  height: 100%;
  background-color: #f0f2f5;
}
.video-container{
  width: 100%;
}
.video-container ul{
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;
  padding: 0 1.5%;
}
.video-container li{
  width: 47%;
  height: 330rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin: 20rpx 1.5%;
}
.video-img{
  width: 100%;
  height: 200rpx;
  border-radius: 20rpx 20rpx 0 0;
}
.tabbar{
  display: flex;
  justify-content: center;
  align-items: center;
}